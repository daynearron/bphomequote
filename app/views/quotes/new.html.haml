.wrapper
	.form-wrapper
		.form	
			%h1
				Quick Quote
			%h2.sub-header
				Home Coverage
			= form_for @quote do |f|
				= f.label :name
				= f.text_field :name, placeholder: 'Full Name of Insured', required: true, class: "name"
				
				= f.label :dob
				= f.text_field :dob, placeholder: 'DOB', required: true, class: "dob"

				= f.label :phone
				= f.text_field :phone, placeholder: 'Phone', required: true, input_html: { 'input-mask': '000-000-0000' },class: "phone"

				= f.label :email
				= f.email_field :email, placeholder: 'Email', required: true, class: "email"
					
				=field_set_tag 'Property Address' do

					= f.label :address
					= f.text_field :address, placeholder: 'Street Address', required: true

					= f.label :city
					= f.text_field :city, placeholder: 'City', required: true, class: 'address-small city'

					= f.label :state
					= f.text_field :state, placeholder: 'State', required: true, class: 'address-small state'

					= f.label :zip
					= f.text_field :zip, placeholder: 'Zip Code', required: true, class: 'address-small zip'

					= f.label :property
					= f.select :property, options_for_property,{:include_blank => 'Property Type'}, required: true

				= f.check_box :new_usr, :id => "quote_new_usr"
				= f.label :new_usr, :id => "addUsrLabel" do
					.add_new_insured_trigger
						%span#indicator
							+ Add
						Additional Insured
				.add_new_insured.hidden
					=field_set_tag 'Additional Insured' do

						= f.label :additional_insured_name
						= f.text_field :additional_insured_name, placeholder: 'Full Name of Insured', class: "name"

						= f.label :additional_insured_dob
						= f.text_field :additional_insured_dob, placeholder: 'DOB', class: "dob"
						
						= f.label :additional_insured_phone
						= f.text_field :additional_insured_phone, placeholder: 'Phone', class: "phone"
				.hidden
					= f.label :nickname
					= f.text_field :nickname, hint: 'leave blank'

				= f.submit 'Get Quote', class: 'btn'
		%p.cta
			=link_to "Learn More", "http://balboapacific.com"
			about Balboa Pacific Insurance.

